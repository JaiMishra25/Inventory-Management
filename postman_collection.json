						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"iPhone 15 Pro\",\n  \"type\": \"Electronics\",\n  \"sku\": \"IPH15PRO-001\",\n  \"image_url\": \"https://example.com/iphone15pro.jpg\",\n  \"description\": \"Latest iPhone with titanium design\",\n  \"quantity\": 25,\n  \"price\": 1199.99\n}"
